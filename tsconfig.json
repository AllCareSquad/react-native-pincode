{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "jsx": "react-native",
    "lib": [
      "es2019"
    ],
    "declaration": true,
    "outDir": "./dist",
    "strict": false,
    "moduleResolution": "node",
    "types": [
      "react",
      "react-native",
      "jest"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "__tests__", "./jestSetupFile.js", "./babel.config.js", "__mocks__"]
}
